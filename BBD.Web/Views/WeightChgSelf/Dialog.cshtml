@{
    ViewBag.Title = "体重编辑";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BBD.Models.tb_Weight_Chg_Self
<form id="dialogForm" method="post" action="#">
    <input type="hidden" id="Id" value="@Model.Id" name="Id" />
    <input type="hidden" id="uId" name="uId" value="@Model.uId" />
    <table style="width: 100%; text-align: center">
        <tr>
            <td>
                <label for="uName">
                    用户姓名:
                </label>
            </td>
            <td>
                @Model.uName
            </td>
        </tr>
        <tr>
            <td>
                <label for="Hid">
                    升高:
                </label>
            </td>
            <td>
                <input id="Hid" class="easyui--numberbox" type="text" name="Hid" value="@Model.Hid" data-options="min:0,precision:0" />
            </td>
        </tr>
        <tr>
            <td>
                <label for="Weight">
                    体重:
                </label>
            </td>
            <td>
                <input id="Weight" class="easyui-numberbox" type="text" name="Weight" value="@Model.Weight" data-options="min:1,precision:2" />
            </td>
        </tr>

        <tr>
            <td>
                <label for="RecDate">
                    记录日期:
                </label>
            </td>
            <td>
                <input id="RecDate" class="easyui-datebox" type="text" name="RecDate" value="@Model.RecDate" />
            </td>
        </tr>

    </table>
    <script type="text/javascript">
       
    </script>
</form>
